FROM ubuntu:20.04

## Install required software.

RUN \
  apt-get -y update && \
  DEBIAN_FRONTEND="noninteractive" TZ="America/Eastern" \
  apt-get -y -q install git wget build-essential python3-htseq python3-pandas python3-pysam \
    python3-numpy python3-matplotlib

## Install ssTSS app.

RUN \
  git clone https://github.com/egenesis/seven_bridges_apps.git && \
  chmod a+x seven_bridges_apps/ssTSS/ssTSS.py && \
  mv seven_bridges_apps/ssTSS/ssTSS.py /usr/local/bin/

CMD ["/bin/bash"]
